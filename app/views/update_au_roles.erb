<h3>Update Roles for <%="#{@mbr_to_update[:fname]} #{@mbr_to_update[:lname]}, #{@mbr_to_update[:callsign]}: #{@mbr_to_update[:email]}"%></h3>
<form action="/admin/update_auth_user" method="POST" name="auRoles" onsubmit="return validateAssignRoleForm();">
	<input type="hidden" name="mbr_id" value=<%=@mbr_to_update[:id]%>>
  <p>Authorized User Status:</p>
  <label for="active">Active</label>
  <input type="radio" name="status" id="active" <% if @mbr_to_update[:active] == 1 %>checked<%end%> value="1" onchange="authUserStatusSet(this)">
  <label for="active">Inactive</label>
  <input type="radio" name="status" id="inactive" <% if @mbr_to_update[:active] == 0 %>checked<%end%> value="0" onchange="authUserStatusSet(this)">
    <br />
  <%# expect @au_roles = [[:role_id, :role_description, :role_boolean],[]] %>
  <div id="roles">
  <p>Authorized User Roles:</p>
	<% for role in @au_roles%>
    <label for=<%="#{role[0]}"%>><%=role[1]%></label>
		<input type="checkbox" name=<%="roles[#{role[0]}]"%> id=<%="#{role[0]}"%> value=1
		<% if role[2] == 1 %>checked<% end %>>
	<% end %>
  </div>
  <br />
  <label for="notes_field">Leave notes for this change in roles here</label>
  <textarea name="notes" id="notes_field" rows="3" cols="65"></textarea>
  <br />
	<input type="submit" value="Submit" onsubmit="validateAssignRoleForm()">
</form>